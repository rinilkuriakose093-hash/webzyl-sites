    <script data-cfasync="false" src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script><script>
        // Mobile Menu Toggle
        (function () {
            const menuToggle = document.getElementById('menuToggle');
            const navMenu = document.getElementById('navMenu');
            const menuBackdrop = document.getElementById('menuBackdrop');
            const header = document.getElementById('header');

            if (!menuToggle || !navMenu || !menuBackdrop) return;

            function setOpen(nextOpen) {
                const isOpen = !!nextOpen;
                navMenu.classList.toggle('active', isOpen);
                menuToggle.classList.toggle('active', isOpen);
                menuBackdrop.classList.toggle('active', isOpen);
                try { menuToggle.setAttribute('aria-expanded', isOpen ? 'true' : 'false'); } catch (_) {}
                document.body.style.overflow = '';
            }

            menuToggle.addEventListener('click', () => {
                setOpen(!navMenu.classList.contains('active'));
            });

            menuBackdrop.addEventListener('click', () => setOpen(false));

        // Γö£├│Γö¼┬ÑΓö╝├å Disabled (kept for reference): manual scroll logic
        /*
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', (e) => {
                const targetId = link.getAttribute('href');
                if (!targetId || !targetId.startsWith('#')) return;

                const targetEl = document.querySelector(targetId);
                if (!targetEl) return;

                e.preventDefault();
                menuToggle.classList.remove('active');
                navMenu.classList.remove('active');
                menuBackdrop.classList.remove('active');
                document.body.style.overflow = '';
                const headerOffset = header?.offsetHeight || 72;
                const elementPosition = targetEl.getBoundingClientRect().top + window.pageYOffset;
                const offsetPosition = elementPosition - headerOffset;
                setTimeout(() => {
                    try { targetEl.scrollIntoView({ behavior: 'smooth', block: 'start' }); } catch (_) {}
                    window.scrollTo({ top: offsetPosition, behavior: 'smooth' });
                }, 90);
                setTimeout(() => {
                    try { window.location.hash = targetId; } catch (_) {}
                }, 180);
            });
        });
        */

            // Mobile nav: close menu and let native anchor scrolling happen (no artificial delays)
            document.querySelectorAll('.nav-link').forEach(link => {
                link.addEventListener('click', () => {
                    const targetId = link.getAttribute('href');
                    if (!targetId || !targetId.startsWith('#')) return;
                    setOpen(false);
                });
            });

            // Sticky Header
            const syncHeaderTransparency = () => {
                if (!header) return;
                if (window.scrollY > 100) {
                    header.classList.remove('transparent');
                } else {
                    header.classList.add('transparent');
                }
            };

            window.addEventListener('scroll', syncHeaderTransparency);

            // Initial state
            setOpen(false);
            syncHeaderTransparency();
        })();

        // Lightbox
        function openLightbox(src) {
            document.getElementById('lightboxImage').src = src;
            document.getElementById('lightbox').classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeLightbox() {
            document.getElementById('lightbox').classList.remove('active');
            document.body.style.overflow = '';
        }

        // Close lightbox on backdrop click
        document.getElementById('lightbox').addEventListener('click', (e) => {
            if (e.target.id === 'lightbox') closeLightbox();
        });

        // Close lightbox on Escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') closeLightbox();
        });

        // Booking Enquiry (Hospitality)
        (function initBookingEnquiry() {
            const form = document.getElementById('bookingEnquiryForm');
            if (!form) return;

            const statusEl = document.getElementById('bookingEnquiryStatus');
            const slug = form.getAttribute('data-slug') || '';

            const checkIn = document.getElementById('be_checkin');
            const checkOut = document.getElementById('be_checkout');
            const today = new Date();
            const yyyy = today.getFullYear();
            const mm = String(today.getMonth() + 1).padStart(2, '0');
            const dd = String(today.getDate()).padStart(2, '0');
            const todayStr = `${yyyy}-${mm}-${dd}`;
            if (checkIn) checkIn.min = todayStr;
            if (checkOut) checkOut.min = todayStr;

            if (checkIn && checkOut) {
                checkIn.addEventListener('change', () => {
                    if (checkIn.value) checkOut.min = checkIn.value;
                });
            }

            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                if (statusEl) statusEl.textContent = 'Sending...';

                const payload = {
                    slug,
                    website: form.querySelector('input[name="website"]')?.value || '',
                    name: document.getElementById('be_name')?.value?.trim() || '',
                    phone: document.getElementById('be_phone')?.value?.trim() || '',
                    guests: Number(document.getElementById('be_guests')?.value || 0) || 0,
                    checkIn: document.getElementById('be_checkin')?.value || '',
                    checkOut: document.getElementById('be_checkout')?.value || '',
                    roomType: document.getElementById('be_room')?.value || '',
                    notes: document.getElementById('be_notes')?.value?.trim() || ''
                };

                try {
                    const res = await fetch('/api/booking', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });
                    const json = await res.json().catch(() => ({}));
                    if (!res.ok || !json.success) {
                        throw new Error(json.message || 'Unable to submit enquiry.');
                    }
                    if (statusEl) statusEl.textContent = 'Enquiry received. We will contact you shortly.';
                    form.reset();
                    if (checkIn) checkIn.min = todayStr;
                    if (checkOut) checkOut.min = todayStr;
                } catch (err) {
                    if (statusEl) statusEl.textContent = (err && err.message) ? err.message : 'Something went wrong. Please try again.';
                }
            });
        })();
    </script>
</body>
</html>
